             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NEWSViewer"
             mc:Ignorable="d" >
    <!--d:DesignHeight="450" d:DesignWidth="800"-->
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label x:Name="Label_message" Content="메세지" VerticalAlignment="Center" HorizontalAlignment="Center"  Margin="20"/>
        <Button x:Name="Button_OK" Content="확인" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" Margin="5"/>
    </Grid>
</UserControl>
