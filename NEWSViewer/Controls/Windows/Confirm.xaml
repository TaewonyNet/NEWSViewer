<UserControl x:Class="NEWSViewer.Confirm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NEWSViewer"
             mc:Ignorable="d" >
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label x:Name="Label_message" Content="메세지" VerticalAlignment="Center" HorizontalAlignment="Center"  Margin="20"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5" Grid.Row="1" >
            <Button x:Name="Button_Yes" Content="예" VerticalAlignment="Center" Margin="5" HorizontalAlignment="Center"/>
            <Button x:Name="Button_No" Content="아니오" VerticalAlignment="Center" Grid.Row="1" Margin="5" HorizontalAlignment="Center"/>
            <!--<Button x:Name="Button_Cancel" Content="취소" VerticalAlignment="Center" Grid.Row="1" Margin="5" HorizontalAlignment="Center"/>-->
        </StackPanel>
    </Grid>
</UserControl>
